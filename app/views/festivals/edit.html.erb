<div class="container">
  <h2>Editar Festival </h2>

  <%= simple_form_for @festival do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :date %>
      <%= f.input :location %>
      <%= f.input :price %>
      <%= f.input :category %>
      <%= f.input :description %>
    </div>

    <div class="form-actions btn btn-primary">
      <%= f.button :submit, "Editar Festival" %>
    </div>

    <%= link_to "Voltar para o festival", festival_path %>
  <% end %>
</div>

