<%= render 'shared/navbar' %>
<div class="container">
  <div class="mt-3 p-4">

  <%= form_tag festivals_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    # "",
    class: "form-control",
    placeholder: "Find a festival by name"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

    <h1>Festivals#index</h1>
    <p>Find me in app/views/festivals/index.html.erb</p>

    <% @festivals.each do |festival| %>
      <p>Name: <%= festival.name %></p>
      <p>Description: <%= festival.description %></p>
      <p>Date: <%= festival.date %></p>
      <p>Location: <%= festival.location %></p>
    <% end %>
  </div>
</div>
<%= render 'shared/footer' %>

