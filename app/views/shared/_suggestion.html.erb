
<%#Festivais sugeridos pelo site, uma vez que o usuario nao tem nenhum festival adicionado na sua lista
------------------------------------------------------------------------------------------------------%>
<div class="containerindex d-flex flex-row">
  <div class="owl-carousel owl-theme">
    <% if @wishlists.empty? %>
      <% @festivals.each do |festival| %>
    <div class="p-4">
      <div class="d-flex flex-row">
        <div class="card">
          <div class="content">
            <h2 class="title"><%= festival.category %></h2>
              <p class="copy">
                <p></p></p>
                <button class="btn btn-outline-warning"><%= link_to "See Details", festival_path(festival) %></button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
    <% else %>
<%#Festivais sugeridos pela escolha de categoria do usuario
------------------------------------------------------------%>

<div class="container" style="width: 100vh">
      <div class="row contentindex d-flex justify-content-center" style="width: 100vh">
        <div class="textbox">
          <h5>Top festivals close to you</h5>
          <p>Check out this festivals</p>
        </div>

          <div class="row" style="width: 100vh">
              <div class="containerindex d-flex flex-row justify-content-center">
                <div class="owl-carousel owl-theme mx-auto">
                    <% @suggestions.each do |festival| %>
                        <div class="p-4">
                          <div class="d-flex flex-row">
                            <div class="card">
                              <div class="content">
                                <h2 class="title"><%= festival.name %></h2>
                                  <p class="copy">
                                    <p><%= festival.location %></p></p>
                                    <button class="btn btn-outline-warning"><%= link_to "See Details", festival_path(festival) %></button>
                              </div>
                            </div>
                          </div>
                        </div>
                    <% end %>
                </div>
              </div>
          </div>

      </div>
    </div>
<% end %>


