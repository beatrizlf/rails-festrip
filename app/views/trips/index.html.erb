<%= render 'shared/navbar' %>

<div class="contentindex">

    <div class="textbox">
      <h5><strong>Find your flights to:</strong></h5>
    </div>

    <div class="w-100">

      <div class="containerindex d-flex flex-row">
        <div class="owl-carousel owl-theme">
            <% @wishlists.each do |wishlist| %>
                <div class="p-4">
                  <div class="d-flex flex-row">
                    <div class="card">
                      <div class="content">
                        <h2 class="title"><%= wishlist.festival.name %></h2>
                          <p class="copy">
                            <p><%= wishlist.festival.location %></p></p>
                            <p><%= wishlist.festival.begin_date %></p></p>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
      </div>
    </div>

    <div class="container mb-5" style="border-style: solid; border-color: #F58B00; border-width: thin; ">
      <div class="sky-widget" data-skyscanner-widget="FlightSearchWidget" data-locale="en-GB"
      data-params="colour:#181616;fontColour:#f58b00;buttonColour:#f58b00;buttonFontColour:#fff;"
      data-market="BR"
      data-currency="USD"
      data-origin-geo-lookup="true"
      data-target="_self"
      data-flights-max-children-number="0"
      data-button-label="Start your FesTrip!"
      data-widget-padding="10"
      data-widget-border-radius="4"
      data-powered-by-logo-colour="#ff6b6b"
      ></div>
      <script src="https://widgets.skyscanner.net/widget-server/js/loader.js" async></script>
    </div>



    <%= button_to "#", class: "btn btn-outline-warning mb-3" do %>
    <%= link_to "Back to Festivals", festivals_path %>
    <% end %>

    <iframe id="closer2event-iframe" src="https://map2.closer2event.com?addr=<%= @wishlists.first.festival.location %>&event=festrip&check_in=2021-03-14&check_out=2021-03-17" width="100%" height="500px" frameborder="0"></iframe>

    <script id="closer2event-1cb88d6c029019f793fe7e235917c42c" type="text/javascript" src="https://map.closer2event.com/assets/widget/map.js"></script>

</div>

