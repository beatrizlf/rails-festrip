
<div class="container m-4">
  <div class="text"><h1><strong>Find your flights to:</strong></h1>
  <% @locations.each do |location| %>
    <h3> <%= location %> </h3>
  <% end %>

  <div>
    <div class="sky-widget" data-skyscanner-widget="FlightSearchWidget" data-locale="en-GB"
    data-params="colour:solar;fontColour:#000;buttonColour:dawn;buttonFontColour:#fff;"
    data-market="BR"
    data-currency="USD"
    data-origin-geo-lookup="true"
    data-target="_self"
    data-flights-max-children-number="0"
    data-button-label="Start your FesTrip!"
    data-widget-padding="10"
    data-widget-border-radius="4"
    ></div>
    <script src="https://widgets.skyscanner.net/widget-server/js/loader.js" async></script>
  </div>
</div>

